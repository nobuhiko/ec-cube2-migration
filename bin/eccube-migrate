#!/usr/bin/env php
<?php

declare(strict_types=1);

// Try to find EC-CUBE root directory
$eccubeRootPaths = [
    getcwd(),                           // Current working directory
    dirname(__DIR__, 4),                // Installed as dependency (data/vendor/nobuhiko/ec-cube2-migration)
];

$eccubeRoot = null;
foreach ($eccubeRootPaths as $path) {
    if (file_exists($path . '/html/define.php') && file_exists($path . '/data/config/config.php')) {
        $eccubeRoot = $path;
        break;
    }
}

if ($eccubeRoot !== null) {
    // Load composer autoloader
    require_once $eccubeRoot . '/data/vendor/autoload.php';

    // Define constants needed for EC-CUBE
    define('HTML_REALDIR', $eccubeRoot . '/html/');
    define('HTML2DATA_DIR', '../data/');
    define('DATA_REALDIR', HTML_REALDIR . HTML2DATA_DIR);
    define('CLASS_REALDIR', DATA_REALDIR . 'class/');
    define('CLASS_EX_REALDIR', DATA_REALDIR . 'class_extends/');

    // Load config for database settings
    require_once DATA_REALDIR . 'config/config.php';

    // Load only what's needed for SC_Query
    require_once CLASS_REALDIR . 'SC_Query.php';
    require_once CLASS_EX_REALDIR . 'SC_Query_Ex.php';
} else {
    // Standalone mode - just load autoloader
    $autoloadPaths = [
        __DIR__ . '/../vendor/autoload.php',           // Package development
        __DIR__ . '/../../../autoload.php',            // Installed as dependency
    ];

    $autoloaderFound = false;
    foreach ($autoloadPaths as $autoloadPath) {
        if (file_exists($autoloadPath)) {
            require_once $autoloadPath;
            $autoloaderFound = true;
            break;
        }
    }

    if (!$autoloaderFound) {
        fwrite(STDERR, "Could not find autoloader. Please run 'composer install'.\n");
        exit(1);
    }

    // Try to load EC-CUBE config for database settings
    $configPaths = [
        getcwd() . '/data/config/config.php',
    ];

    foreach ($configPaths as $configPath) {
        if (file_exists($configPath)) {
            require_once $configPath;
            break;
        }
    }
}

use Eccube2\Migration\Command\CreateCommand;
use Eccube2\Migration\Command\MigrateCommand;
use Eccube2\Migration\Command\RollbackCommand;
use Eccube2\Migration\Command\StatusCommand;
use Symfony\Component\Console\Application;

$application = new Application('EC-CUBE 2 Migration', '1.0.0');

$application->add(new MigrateCommand());
$application->add(new RollbackCommand());
$application->add(new StatusCommand());
$application->add(new CreateCommand());

$application->run();
